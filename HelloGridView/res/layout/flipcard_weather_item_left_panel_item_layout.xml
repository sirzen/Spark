<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    <TextView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/flipcard_weather_item_left_panel_item_weekday" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/flipcard_weather_item_left_panel_item_weatherpic" />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipcard_weather_item_left_panel_item_weather"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipcard_weather_item_left_panel_item_temp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipcard_weather_item_left_panel_item_wind" />

</LinearLayout>
